{% extends 'base.html.twig' %}

{% block title %}{{ pessoa.dsNome }}{% endblock %}

{% block body %}
    <form>
  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Código Pessoa:</label>
    <div class="col-sm-10">
      <input class="form-control col-md-5" type="text" placeholder="{{ pessoa.nuSeqPessoa }}" readonly>
    </div>
  </div>
  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Código Empresa:</label>
    <div class="col-sm-10">
      <input class="form-control col-md-5" type="text" placeholder="{{ pessoa.nuSeqEmpresa }}" readonly>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Nome:</label>
    <div class="col-sm-10">
      <input class="form-control col-md-5" type="text" placeholder="{{ pessoa.dsNome }}" readonly>
    </div>
  </div>
  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Cpf/Cnpj:</label>
    <div class="col-sm-10">
      <input class="form-control col-md-5" type="text" placeholder="{{ pessoa.coCpfCnpj }}" readonly>
    </div>
  </div>
</form>


{% if empresa %}

    <table id="empresas" class="table table-striped">
      <thead>
        <tr>
          <th>Empresa:</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>

          <tr>
            <td>{{ empresa.coCnpj }} - {{empresa.razaoSocial}}</td>
            <td>
              <a href="http://localhost/qsa_symfony/public/empresas/{{ empresa.nuSeqEmpresa }}" class="btn btn-success">Ver</a>
              <a href="http://localhost/qsa_symfony/public/empresas/editar/{{ empresa.nuSeqEmpresa }}" class="btn btn-warning">Editar</a>
              <a href="http://localhost/qsa_symfony/public/empresas/baixar/{{ empresa.nuSeqEmpresa }}" class="btn btn-danger" data-id="{{ empresa.nuSeqEmpresa  }}">Baixar</a>
            </td>

          </tr>

      </tbody>

{% else %}
    <p> Não existe empresa relacionada.</p>
{% endif %}

<a href="http://localhost/qsa_symfony/public/pessoas/listar" class="btn btn-primary">Voltar</a>
{% endblock %}