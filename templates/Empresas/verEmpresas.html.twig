{% extends 'base.html.twig' %}

{% block title %}{{ empresa.razaoSocial }}{% endblock %}

{% block body %}
    <form>
  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Código Empresa:</label>
    <div class="col-sm-10">
      <input class="form-control col-md-5" type="text" placeholder="{{ empresa.nuSeqEmpresa }}" readonly>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Razão Social:</label>
    <div class="col-sm-10">
      <input class="form-control col-md-5" type="text" placeholder="{{ empresa.razaoSocial }}" readonly>
    </div>
  </div>
  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Cnpj:</label>
    <div class="col-sm-10">
      <input class="form-control col-md-5" type="text" placeholder="{{ empresa.coCnpj }}" readonly>
    </div>
  </div>
</form>


{% if pessoas %}
    <table id="qsa" class="table table-striped">
      <thead>
        <tr>
          <th>QSA:</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for pessoa in pessoas %}
          <tr>
            <td>{{ pessoa.coCpfCnpj }} - {{pessoa.dsNome}}</td>
            <td>
              <a href="/pessoas/{{ pessoa.nuSeqPessoa }}" class="btn btn-success">Ver</a>
              <a href="/pessoas/editar/{{ pessoa.nuSeqPessoa }}" class="btn btn-warning">Editar</a>
              <a href="/pessoas/baixar/{{ pessoa.nuSeqPessoa }}" class="btn btn-danger" data-id="{{ pessoa.nuSeqPessoa }}">Deletar</a>
            </td>

          </tr>
        {% endfor %}
      </tbody>

{% else %}
    <p> Não existe QSA cadastrado</p>

{% endif %}

<a href="/" class="btn btn-primary">Voltar</a>
{% endblock %}